def limpiar_nombre_archivo(nombre, max_length=100):
    nombre_limpio = re.sub(r'[<>:"/\\|?*\n\r]', '', nombre)
    nombre_limpio = re.sub(r'[^\x00-\x7F]+', '', nombre_limpio)
    return nombre_limpio[:max_length].strip()

